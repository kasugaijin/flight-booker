<%= form_with url: '/', method: :get do | f | %>
  <%= f.label :dept_airport_id, 'From' %>
  <%= f.collection_select :dept_airport_id, @airport_names, :id, :name %>
  <%= f.label :arr_airport_id, 'To' %>
  <%= f.collection_select :arr_airport_id, @airport_names, :id, :name %>
  <%= f.label :passengers, 'Passengers' %>
  <%= f.select :passengers, [1, 2, 3, 4] %>
  <%= f.label :date_time, 'Date' %>
  <%= f.select :date, ['2023-07-01', '2023-07-02', '2023-07-03' ] %>
  <%= f.submit 'Search' %>
<% end %>

